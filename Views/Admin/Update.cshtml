@{
    Layout = null;
}


@model JFLabs.Models.video
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Update</title>
    <link rel="shortcut icon" href="~/Content/images/49.png">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    @Html.Partial("PartialPage")

    <style>
        a {
            color: white;
        }
    </style>


</head>
<body style="font-family:Algerian ;color:white;overflow-x:hidden ;background-image:url('/Content/images/black.jpg');background-repeat:no-repeat;background-size:cover;">
    <div class="container-fluid">

        @Html.Partial("AdminPartialHeader")
        <br />
        <div class="container">
            <div class="account_grid">
                <div class=" login-right">
                    <br />  <h3 style=" font-size:40px"> Update Video Details </h3> <br />

                    <form action="/admin/EditOK/@Model.video_Id" method="POST">


                        <span style=" font-size:20px">Video Name</span>
                        <input type="text" name="video_name" class="form-control" style="width:30% ;font-size :20px ; font-family :'times new roman' " placeholder="Enter Name" value="@Model.video_name" required />

                        <br />

                        <span style=" font-size:20px">Description</span>
                        <input type="text" name="pricePerPc" class="form-control" style="width:30% ;font-size :20px ; font-family :'times new roman' " placeholder="Description" value="@Model.video_description" required />

                        <br />

                        <strong style=" font-size:30px">Upload Video:</strong> <br />
                        <input type="file" style=" font-size:20px" name="file" required /><br />

                        <button type="submit" class="btn btn-primary btn-block" style="width: 20% ; font-size:20px" value="submit" onclick="validate()"> Done </button> <br />

                    </form>

                    <div class="col-md-5"> </div>

                </div>

                <div class="col-md-12"> <br /> <br /> </div>

            </div>
        </div>

    </div>
    <script src="~/js/bootstrap.js" type="text/javascript"></script>

</body>
</html>
