@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    @Html.Partial("PartialPage")

    <link rel="shortcut icon" href="~/Content/images/49.png">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

</head>
<body>
    
    <div class="container">
        <h6 class="women1"><a href="../../home/index">Home</a> <i> </i> Login </h6>
        <div class="account">
            <h1>Account</h1>
            <div class="account-pass">
                <div class="col-md-8 account-top">
                    <form action="../home/signin" method="post">
                        <div>
                            <span>Username</span>
                            <input type="text" name="username" placeholder="Enter your name" required />
                            <span id="name1"></span><br>
                        </div>
                        <div>
                            <span>Password</span>
                            <input type="password" name="password" placeholder="Enter your Password" value="" required />
                        </div>

                        <button type="submit" class="btn btn-primary btn-block" value="submit" onclick="validate()"> LogIn </button> <br />
                    </form>
                </div>
                <div class="col-md-4 left-account ">


                    <div class="clearfix"> </div>
                </div>
                <div class="clearfix"> </div>
            </div>
        </div>

    </div>

</body>
</html>
