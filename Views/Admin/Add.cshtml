@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Add</title>
    @Html.Partial("PartialPage")

    <link rel="shortcut icon" href="~/Content/images/49.png">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

</head>
<body style="font-family:Algerian ;color:white;overflow-x:hidden ;background-image:url('/Content/images/black.jpg');background-repeat:no-repeat;background-size:cover;">


    @Html.Partial("AdminPartialHeader")

    @{

        if (IsPost)
        {
            var video_name = Request["video_name"];
            var video_description = Request["video_description"];
            var video_link = Request["video_link"];
           
            Response.Redirect("~/Admin/SaveVideo");

        }


    }


    <!---->
    <div class="container">

    </div>
    <div class="back">

    </div>
    <!---->
    <div class="container">
        <div class="account_grid">
            <div class=" login-right">
                <h3 style=" font-size:40px">Add Video</h3>
                <br /><br />

                @using (Html.BeginForm("SaveVideo", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {

                    <span style=" font-size:30px">Title</span>
                    <input type="text" name="video_name" class="form-control" style="width: 40%; font-size: 20px ; font-family :'Times New Roman'" placeholder="Enter Name" required />

                    <br />

                   <strong style=" font-size:30px" >Description</strong><br>
                   <textarea name="video_description" cols="5" rows="6" style=" font-size:20px ; font-family :'Times New Roman' " class="form-control" placeholder="Description" required> </textarea>

                    <br />

                    <span style=" font-size:30px">Video Link</span>
                    <input type="text" name="video_link" class="form-control" style="width: 40%; font-size: 20px ; font-family :'Times New Roman'" placeholder="Enter Name" required />

                    <button type="submit" class="btn btn-primary btn-block" style="width: 20% ; font-size:20px" value="submit" onclick="validate()"> Done </button> <br />

                }

</div>

            <script src="~/js/bootstrap.js" type="text/javascript"></script>
        </div>
    </div>
</body>
</html>
